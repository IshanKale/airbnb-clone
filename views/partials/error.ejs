<%  if(typeof errors != undefined && errors && errors.length>0){  %>
      <div style="background: #ffeaea; border: 1px solid #ff5a5f; color: #b71c1c; border-radius: 6px; margin-bottom: 16px; padding: 12px 18px; font-size: 1em; box-shadow: 0 1px 6px rgba(255,90,95,0.07);">
        <ul style="list-style: none; padding: 0; margin: 0;">
          <% errors.forEach(err => { %>
        <li style="margin-bottom: 6px; display: flex; align-items: center;">
          <span style="font-size: 1.1em; margin-right: 8px;">&#9888;</span>
          <span><%= err %></span>
        </li>
          <% }); %>
        </ul>
      </div>
    <%}%>