<%- include('../partials/navbar') %>
<%- include('../partials/head',{pageTitle:"Log In"}) %>
<div style="max-width: 420px; margin: 48px auto; padding: 40px 36px 32px 36px; background: #fff; border-radius: 16px; box-shadow: 0 8px 32px rgba(255,90,95,0.10), 0 1.5px 8px rgba(0,0,0,0.07); font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; position: relative;">
  <h2 style="text-align:center; margin-bottom: 28px; color: #ff5a5f; font-family: inherit; font-size: 2em; letter-spacing: -1px; font-weight: 700;">Welcome Back</h2>
  <form action="/login" method="POST" style="display: flex; flex-direction: column; gap: 22px;">
    <%- include('../partials/error') %>
    <div style="display: flex; flex-direction: column; gap: 8px;">
      <label for="email" style="font-weight: 600; font-family: inherit; color: #333;">Email</label>
      <input value="<%= oldInput && oldInput.email ? oldInput.email : '' %>" type="email" id="email" name="email" required style="padding: 12px 14px; border: 1.5px solid #ff5a5f55; border-radius: 6px; font-size: 1.08em; font-family: inherit; background: #fff8f8; transition: border 0.2s; outline: none;">
    </div>
    <div style="display: flex; flex-direction: column; gap: 8px;">
      <label for="password" style="font-weight: 600; font-family: inherit; color: #333;">Password</label>
      <input type="password" id="password" name="password" required style="padding: 12px 14px; border: 1.5px solid #ff5a5f55; border-radius: 6px; font-size: 1.08em; font-family: inherit; background: #fff8f8; transition: border 0.2s; outline: none;">
      <div style="text-align: right; margin-top: 4px;">
        <a href="/forgot-password" style="font-size: 0.97em; color: #ff5a5f; text-decoration: none; font-weight: 500;">Forgot password?</a>
      </div>
    </div>
    <button type="submit" style="background: linear-gradient(90deg, #ff5a5f 60%, #ff7e82 100%); color: #fff; border: none; border-radius: 6px; padding: 12px 0; font-size: 1.15em; font-weight: bold; cursor: pointer; transition: background 0.3s; font-family: inherit; box-shadow: 0 2px 8px rgba(255,90,95,0.08);">Log In</button>
    <div style="text-align: center; margin-top: 8px; font-size: 0.98em; color: #666;">
      Don't have an account? <a href="/signup" style="color: #ff5a5f; text-decoration: none; font-weight: 500;">Sign Up</a>
    </div>
  </form>
</div>
